<h1>ユーザ情報変更</h1>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="usertable">
    <tr>
      <td><%= f.label :mail, 'メール', :class => "lead" %></td>
      <td><%= f.text_field :mail, :class => "form-control", :size => "30" %></td>
    </tr>
    <tr>
      <td><%= f.label :name, '名称', :class => "lead" %></td>
      <td><%= f.text_field :name, :class => "form-control", :size => "30" %></td>
    </tr>
    <tr>
      <td><%= f.label :trainer_id, 'トレーナー', :class => "lead" %></td>
      <td><%= f.select :trainer_id, User.where.not(id: params[:id]).map{|t| [t.name, t.id]}, { :include_blank => true }, { class: "form-control" } %></td>
    </tr>
    <tr>
      <td><%= f.label :password, 'パスワード', :class => "lead" %></td>
      <td><%= f.password_field :password, :class => "form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, 'パスワード(2回目)', :class => "lead" %></td>
      <td><%= f.password_field :password_confirmation, :class => "form-control" %></td>
    </tr>
    <tr>
      <td id="b" colspan="2"><%= f.submit '変更', method: :put, :class => "form-control" %></td>
    </tr>
  </table>
<% end %>
