<h1>ユーザ登録</h1>
<%= form_for(@user) do |f| %>
  <table>
    <tr>
      <td><%= f.label :mail, 'メール' %></td>
      <td><%= f.text_field :mail %></td>
    </tr>
    <tr>
      <td><%= f.label :name, '名称' %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :password, 'パスワード' %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, 'パスワード(2回目)' %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit '登録' %></td>
    </tr>
  </table>
<% end %>
